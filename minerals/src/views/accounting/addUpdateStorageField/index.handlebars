<div class="card">
    {{> ../../shared/cardheader}}
    <div class="card-body">     
          {{> form}}      
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="storageFieldModal" tabindex="-1" role="dialog" aria-labelledby="storageFieldLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="storageFieldModalLabel">Cancel</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to cancel?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                <button type="button" id="cancelStorageFieldChangesBtn" data-dismiss="modal" class="btn btn-primary">Yes</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="contractModal" tabindex="-1" role="dialog" aria-labelledby="contractModal" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="contractModalLabel">
                    Choose a Gas Storage Contract
                 
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table id="storageFieldsModalTable" class="display" style="width:100%">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Contract</th>
                            <th>Field Name</th>
                            <th>Lease Number</th>
                            <th>Lessee</th>
                            <th>Effective Date</th>
                            <th>Termination Date</th>
                            <th>Expiration Date</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" id="contractModalCloseBtn" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


