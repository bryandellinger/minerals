<div class="card">
    {{> ../../shared/cardheader}}
    <div class="card-body">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#home">Check</a>
            </li>
            {{#if check.id}}
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#menu1">Payments</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#menu2">Adjustments</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#menu3">Storage Fields</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#menu4">Contract Rentals</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#menu5">Other Payments</a>
            </li>
            {{/if}}

        </ul>
        <div class="tab-content">
            <div class="tab-pane container active" id="home">
                {{> form}}
            </div>
            <div class="tab-pane container fade" id="menu1">
                <div class="mt-3"></div>
                <table id="checkPaymentsTable" class="display" style="width:100%">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Company</th>
                            <th>Well Number</th>
                            <th>API</th>
                            <th>Payment Amount</th>
                            <th>Check Date</th>
                            <th>Payment Type</th>
                            <th>Tract</th>
                            <th>Production Month</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="tab-pane container fade" id="menu2">
                <div class="mt-3"></div>
                <table id="checkAdjustmentsTable" class="display" style="width:100%">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Company</th>
                            <th>Well Number</th>
                            <th>API</th>
                            <th>Adjustment Amount</th>
                            <th>Check Date</th>
                            <th>Payment Type</th>
                            <th>Tract</th>
                            <th>Production Month</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="tab-pane container fade" id="menu3">
                <div class="mt-3"></div>
                <table id="checkStorageFieldsTable" class="display" style="width:100%; font-size: 0.8em">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Contract</th>
                            <th>Field Name</th>
                            <th>Company</th>
                            <th>Payment</th>
                            <th>Payment Entry Date</th>
                            <th>Lease Number</th>
                            <th>Lessee</th>
                            <th>Year</th>
                            <th>Period</th>
                            <th>Payment  Type</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="tab-pane container fade" id="menu4">
                <div class="mt-3"></div>
                <table id="checkContractRentalsTable" class="display" style="width:100%">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Contract</th>
                            <th>Tract</th>
                            <th>Payment</th>
                            <th>Payment Entry Date</th>
                            <th>Lessee</th>
                            <th>Year</th>
                            <th>Period</th>
                            <th>Held by Prod</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="tab-pane container fade" id="menu5">
                <div class="mt-3"></div>
                <table id="checkOtherPaymentsTable" class="display" style="width:100%">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Payment Type</th>
                            <th>Payment</th>
                            <th>Payment Entry Date</th>
                            <th>Lessee</th>
                            <th>Notes</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
       
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Cancel</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to cancel?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                <button type="button" id="cancelChangesBtn" data-dismiss="modal" class="btn btn-primary">Yes</button>
            </div>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="warningModal" tabindex="-1" role="dialog" aria-labelledby="warningModalLabel" aria-hidden="true">
    <div class="modal-dialog alert alert-warning" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="warningModalLabel">This Check Number Already Exists</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to save a duplicate check number?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                <button type="button" id="saveDuplicateCheckBtn" data-dismiss="modal" class="btn btn-primary">Yes</button>
            </div>
        </div>
    </div>
</div>

