{{#if multipleUnitsInd }}
<div class="row" id="wellboreInfo">
    <div class="col-sm-12">
        <div class="form-group">
            <label>
                Proportionate share based on wellbore lengths?
            </label>
            <div>

                <input id="wellboreLengthIndToggle" type="checkbox"
                       {{#if well.wellboreLengthInd}}
                       checked
                       {{/if}}
                       {{#unless editmode}}
                       disabled readonly
                       {{/unless}}
                       data-style="ios" />
            </div>
        </div>
    </div>
</div>
{{#if well.wellboreLengthInd}}
<table class="table">
    <caption style="caption-side: top;">Borehole Information</caption>
    <thead>
        <tr>
            <th scope="col">Unit</th>
            <th scope="col">Wellbore Length In Unit</th>
            <th scope="col">Wellbore % In Unit</th>
        </tr>
    </thead>
    <tbody>
        {{#each wellboreShares}}
        <tr>
            <td>
                <a href="{{@root.unitsUrl}}?container=addUpdateUnitContainer&unitId={{this.unit.id}}&wellId={{@root.well.id}}">
                    <i class="fas fa-link pr-1"></i>
                    {{this.unit.unitName}} {{#if this.unit.amendmentName}} ({{this.unit.amendmentName}}) {{/if}}
                </a>
            </td>
            <td>
                {{#if @root.editmode}}
                <input type="number" class="form-control lengthInUnit" value="{{this.lengthInUnit}}" />
                {{else}}
                {{this.lengthInUnit}}
                {{/if}}
            </td>
            <td>
                {{this.percentInUnit}}
            </td>
        </tr>
        {{/each}}
    </tbody>
    <tfoot>
        <tr>
            <td><strong>Total Length:</strong></td>
            <td>
               
                    <input type="number" class="form-control" id="totalLength"
                           value="{{totalLength}}" 
                           {{#if editmode}}
                                {{#if well.totalBoreholeLengthOverrideInd}}
                                {{else}}
                                   disabled readonly
                                  {{/if}}
                           {{else}}
                            disabled readonly
                           {{/if}}
                           />                         
            </td>
            <td>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <input type="checkbox"
                                   id="totalBoreholeLengthOverrideInd"
                                   {{#unless editmode}}
                                   disabled
                                   {{/unless}}
                                   {{#if well.totalBoreholeLengthOverrideInd}}
                                   checked
                                   {{/if}} />
                        </div>
                    </div>
                    <input type="text" class="form-control" value="Override" disabled readonly>
                </div>
            </td>
        </tr>
    </tfoot>

</table>
    {{/if}}
    {{/if}}

    <div class="row">
        <table class="table">
            <caption style="caption-side: top;">NRI information</caption>
            <thead>
                <tr>
                    <th scope="col">Tract</th>
                    <th scope="col">Royalty%</th>
                    <th scope="col">Owner</th>
                    <th scope="col">Ownership%</th>
                    <th scope="col">Units</th>
                    <th scope="col">Unit Ownership%</th>
                    <th scope="col">NRI</th>

                </tr>
            </thead>
            <tbody>
                {{#each this.nriInformations}}
                <tr>
                    <td>
                        <a target="_blank" href="{{@root.contractsUrl}}?container=manageTractsContainer&tractNum={{this.tract.tractNum}}"><i class="fas fa-link"></i>{{this.tract.tractNum}}</a>
                    </td>
                    <td>
                        {{this.royaltyPercentAsString}}
                    </td>
                    <td>
                        <a target="_blank" href="{{@root.contractsUrl}}?container=manageLesseesContainer&lesseeId={{this.lessee.id}}">
                            <i class="fas fa-link"></i> {{this.lessee.lesseeName}}
                        </a>
                    </td>
                    <td>
                        {{this.percentOwnershipAsString}}
                    </td>
                    <td style="max-width: 300px;">
                        {{#each this.units}}
                        <a href="{{@root.unitsUrl}}?container=addUpdateUnitContainer&unitId={{this.id}}&wellId={{@root.well.id}}"
                           class="badge badge-secondary"><i class="fas fa-link pr-1"></i>
                        <span style="font-size: 0.9em">{{this.unitName}} {{#if this.amendmentName}} ({{this.amendmentName}})</span> {{/if}}
                        </a>
                        {{/each}}
                    </td>
                    <td>
                        {{this.unitOwnership}}
                    </td>
                    <td>
                        {{this.nri}}
                    </td>
                </tr>
                {{/each}}
            </tbody>
            <tfoot>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td><strong>{{totalNRI}}</strong></td>
                </tr>
            </tfoot>
        </table>
    </div>

