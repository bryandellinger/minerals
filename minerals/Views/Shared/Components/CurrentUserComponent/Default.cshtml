@model User
<p class="nav navbar-text navbar-right">
    <button type="button" id="currentUserModal" class="btn btn-primary faa-parent animated-hover" data-toggle="modal" data-target="#myModal">
        <i class="fas fa-user faa-tada"></i> <span class="userName">@Model.NameFirst @Model.NameLast</span>
    </button>
</p>

<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title userName" > <i class="fas fa-user"></i> @Model.NameFirst  @Model.NameLast</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <form id="userForm" novalidate>
                <input type="hidden" name="id" id="UserId" value="@Model.Id">
                <!-- Modal body -->
                <div class="modal-body">
                    <div class="form-group showonedit" style="display: none;">
                        <label for="NameFirst">First Name</label>
                        <input type="text" class="form-control" id="NameFirst" name="nameFirst" value="@Model.NameFirst">
                    </div>
                    <div class="form-group showonedit" style="display: none;">
                        <label for="NameLast">Last Name</label>
                        <input type="text" class="form-control" id="NameLast" name="nameLast" value="@Model.NameLast">
                    </div>
                    <div class="form-group">
                        <label for="EmailAddress">Email</label>
                        <input type="email" class="form-control enableonedit" id="EmailAddress" name="emailAddress" readonly value="@Model.EmailAddress" disabled>
                    </div>
                    <div class="form-group">
                        <label for="EmployeeNum">Emp No</label>
                        <input type="text" class="form-control" id="EmployeeNum" name="employeeNum" readonly value="@Model.EmployeeNum" disabled>
                    </div>
                    <div class="form-group">
                        <label for="WorkPhone">Phone</label>
                        <input type="text" class="form-control enableonedit" id="WorkPhone" name="workPhone" readonly value="@Model.WorkPhone" disabled>
                    </div>
                    <div class="form-group">
                        <label for="WorkAddr">Address</label>
                        <input type="text" class="form-control enableonedit" id="WorkAddr" name="workAddr" readonly value="@Model.WorkAddr" disabled>
                    </div>
                    <div class="form-group">
                        <label for="Company">Company</label>
                        <input type="text" class="form-control enableonedit" id="Company" name="company" readonly value="@Model.Company" disabled>
                    </div>
                    <div class="form-group">
                        <label for="Company">Job Title</label>
                        <input type="text" class="form-control enableonedit" id="JobTitle" name="jobTitle" readonly value="@Model.JobTitle" disabled>
                    </div>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" id="currentUserEditBtn" class="btn btn-info hideonedit">Edit</button>
                    <button type="button" class="btn btn-danger hideonedit" data-dismiss="modal">Close</button>
                    <input type="submit" class="btn btn-info showonedit" style="display: none;" value="Save" />
                    <button type="button" class="btn btn-danger showonedit" style="display: none;" data-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

<input type="hidden"  id="NameFirstOriginal" value="@Model.NameFirst">
<input type="hidden" id="NameLastOriginal" value="@Model.NameLast">
<input type="hidden" id="EmailAddressOriginal" value="@Model.EmailAddress">
<input type="hidden" id="WorkPhoneOriginal" value="@Model.WorkPhone">
<input type="hidden" id="WorkAddrOriginal" value="@Model.WorkAddr">
<input type="hidden" id="CompanyOriginal" value="@Model.Company">
<input type="hidden" id="JobTitleOriginal" value="@Model.JobTitle">

<script src="~/webpack/currentuser.bundle.js" asp-append-version="true"></script>